<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="General Settings">

        <CheckBoxPreference
            android:key="notifications"
            android:title="Notifications"
            android:summary="Enable or disable notifications"
            android:defaultValue="true" />

        <EditTextPreference
            android:key="username"
            android:title="Username"
            android:summary="Enter your username"
            android:defaultValue="JohnDoe" />


    </PreferenceCategory>

    <PreferenceCategory android:title="Advanced Settings">

        <EditTextPreference
            android:key="server_url"
            android:title="Server URL"
            android:summary="Enter the URL of your server"
            android:defaultValue="http://example.com" />

        <CheckBoxPreference
            android:key="debug_mode"
            android:title="Debug Mode"
            android:summary="Enable or disable debug mode"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>
